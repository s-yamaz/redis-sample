
<div id="login-form">
    <%= form_for @login_form, url: sessions_path , html: {class: 'form-horizontal'} do |f| %>
        <div class="form-group">
            <%= f.label :login, class: 'control-label col-md-3' %>
            <div class="col-md-5">
                <%= f.text_field :login, class: 'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :password, class: 'control-label col-md-3' %>
            <div class="col-md-5">
                <%= f.password_field :password, class: 'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-5">
                <%= f.submit 'Login', class: 'btn btn-primary btn-lg'  %>
            </div>
        </div>
    <% end %>
</div>
